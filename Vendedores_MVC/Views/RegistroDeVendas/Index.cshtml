@{
    ViewData["Title"] = "Registro de Venda";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="BuscaSimples">
            <fieldset>
                <legend>Busca Simples</legend>
                <div class="form-group">
                    <label for="dataInicial" class="col-lg-2 control-label">Data Inicial</label>
                    <div class="col-lg-10">
                        <input type="date" name="dataInicial" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="dataFinal" class="col-lg-2 control-label">Data Final</label>
                    <div class="col-lg-10">
                        <input type="date" name="dataFinal" class="form-control" />
                    </div>
                </div>
                <div class="form-group" style="padding-top:5px">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary" >Buscar</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
<br />

<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="BuscaAgrupada">
            <fieldset>
                <legend>Busca Agrupada</legend>
                <div class="form-group">
                    <label for="minDate" class="col-lg-2 control-label">Data Inicial</label>
                    <div class="col-lg-10">
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="maxDate" class="col-lg-2 control-label">Data Final</label>
                    <div class="col-lg-10">
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group" style="padding-top:5px">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Buscar</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>