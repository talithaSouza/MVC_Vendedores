@model Vendedores_MVC.Models.ViewModels.VendedorFormViewModel
@{
}

<h4>Cadastro de Vendedor</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Vendedor.Nome" class="control-label">Nome:</label>
                <input asp-for="Vendedor.Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.Email" class="control-label">Email:</label>
                <input asp-for="Vendedor.Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.DataAniversario" class="control-label"></label>
                <input asp-for="Vendedor.DataAniversario" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.SalarioBase" class="control-label" ></label>
                <input asp-for="Vendedor.SalarioBase" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.DepartamentoId" class="control-label">Departamento:</label>
                <select asp-for="Vendedor.DepartamentoId" asp-items="@(new SelectList(Model.Departamentos, "Id", "Nome"))" class="form-control"></select>
            </div>

            <div class="form-group" style="padding-top:10px">
                <input type="submit" value="Salvar" class="btn btn-success" asp-action="Post"/>
            </div>
        </form>
    </div>
</div>
